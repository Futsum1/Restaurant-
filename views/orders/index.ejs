<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style5.css'/>
    <title>Welcome </title>
</head>
<body>
  <nav>
    <a href="/">home</a>
    &nbsp; | &nbsp;
    <a href="/foods">All Order</a>
  </nav>
  <% if (orders.length > 0) { %>
    <table style="width:100%">
            <tr>
              <th class="col-sm-3" style="background-color:rgb(181, 150, 119);">Food</th>
              <th class="col-sm-3" style="background-color:rgb(181, 150, 119);">Quantity</th>
              <th class="col-sm-3" style="background-color:rgb(181, 150, 119);">Price</th>
              <th class="col-sm-3" style="background-color:rgb(181, 150, 119);">Tip</th>          
              <th class="col-sm-3" style="background-color:rgb(161, 181, 119);">Details</th>          
              <th class="col-sm-3" style="background-color:rgb(202, 48, 48);">Delete</th>          
            </tr>
            <% orders.forEach(function(order) { %>
            <tr>
                <td class="col-sm-3"><%= order.food %></td>
                <td class="col-sm-3"><%= order.quantity %></td>
                <td class="col-sm-3"><%= order.price %></td>
                <td class="col-sm-3"><%= order.tip %></td>            
                <td class="col-sm-3"><a href="/orders/<%=order._id%>">Details</a></td>
                <td>
                  <form class="col-sm-3" action="/orders/<%=order._id%>?_method=DELETE" method="POST">
                    <button class="col-sm-4" type="submit" >X</button>
                  </form>
                </td>
            </tr>
            <%})%>
          </table>
      <% } else {%>
      <h1>You Don't Have Any Orders Yet</h1>
      <% } %>
      </body>
</html>
