    <body>
      <main class='main-Ctrl'>
            <div class="final-list">
              <div class="col-md-4 mt-1">
                <div class="part2 text-center p-3 py-3 text-black">
                    <h3 class="free mt-4">Name:</h3> <span class=" amount mt-4 d-block"><%= order.user_name %></span> <hr> <h3 class="user d-block mt-2">Food:</h3> <span class="information d-block mt-4"><%= order.food %></span> <hr> <h3 class="information d-block mt-4">Price:</h3> <span class="information d-block mt-4"><%= order.price %></span> <hr> <h3 class="information d-block mt-4">Tip:</h3> <span class="information d-block mt-4"><%= order.tip %></span>
                </div>
            </div>
          </div>

    <form  class="form-update" action="/orders/<%= order.id %>?_method=PUT" method="POST" autocomplete="off">
      <div class="form-update">
      <label for="name">Name:</label>
      <input class="form-control" type="text" name="user_name"  placeholder="Update name..">
      <label for="food">Food:</label>
      <input class="form-control" type="text" name="food" placeholder="Update food" value="<%=order.food %>">
      <label for="food">Price:</label>
      <input class="form-control" type="number" name="price" placeholder="Update price" value="<%=order.price %>">
      <label for="food">Tip:</label>
      <input class="form-control" type="number" name="tip" placeholder="Update tip" value="<%=order.tip %>">
      <button type="submit">Update Order</button>
      </form> 
    </div>
    </div>
  </main>

    <form class="form-review"  method="POST" action="/orders/<%= order._id %>/reviews">
    <div>
    <label for="Review">Review of Order:</label>
    <textarea name="comment" rows="5" cols="50"></textarea>
    <label>Rating: </label>
    <select name="rating">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            <input type="submit" value="Add Review">
            </form> 
            
            <form   method="POST" action="/orders/<%= order._id %>/reviews">
            <div class="card-body text-center"> <img src=" https://i.imgur.com/d2dKtI7.png" height="100" width="100">
              <div class="comment-box text-center">
                  <h4 for="Review">Add a comment</h4>
                  <!-- <div class="rating"> <input type="radio" name="rating" value="5" id="5"><label for="5">☆</label> <input type="radio" name="rating" value="4" id="4"><label for="4">☆</label> <input type="radio" name="rating" value="3" id="3"><label for="3">☆</label> <input type="radio" name="rating" value="2" id="2"><label for="2">☆</label> <input type="radio" name="rating" value="1" id="1"><label for="1">☆</label> </div> -->
                  <label for="name">Name:</label>
                  <input class="form-control" type="text" name="user_name"  placeholder="Your Name..">
                  <div class="comment"> <textarea class="form-control" name="comment" placeholder="what is your view?" rows="4"></textarea> </div>
                  <div class="text-center mt-4"> <button class="btn btn-success send px-5">Send message <i class="fa fa-long-arrow-right ml-1"></i></button> </div>

        
              </div>
          </div>
      </div>
    </form> 
    </div>
     <div class='review'>
          <% if (order.reviews.length > 0) { %>
            <h4>Reviews:</h4>
            <table>
                <tbody>
                    <% order.reviews.forEach((review) => { %>
                    <tr>
                        <td><%=review.comment%></td>
                        <td><%=review.rating%></td>
                        <td>
                            <form action="/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
          <!-- </div>  -->
</body>
</html>